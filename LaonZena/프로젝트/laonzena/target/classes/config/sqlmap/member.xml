<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.laonzena.repository.mapper.LoginMapper">
	
	<resultMap id="memberMap" type="Member">
		<result column="member_no" property="memberNo" />
		<result column="member_id" property="memberId" />
		<result column="member_pass" property="memberPass" />
		<result column="member_name" property="memberName" />
		<result column="member_address" property="memberAddress" />
		<result column="member_cell_no" property="memberCellNo" />
		<result column="member_grade" property="memberGrade" />
		<result column="member_login_date" property="memberLoginDate" />
	</resultMap>
	
	<select id="selectMemberInfo" parameterType="Member" resultMap="memberMap">
		select *
		from tb_member
		where member_id = #{memberId}
		  and member_pass = #{memberPass}
	</select>
</mapper>

























